# Django Settings
SECRET_KEY=your_secret_key_here
DJANGO_SETTINGS_MODULE=AxeCollection.settings_production

# Database (SQLite is used by default)
# DATABASE_URL=sqlite:///data/db.sqlite3

# Email settings (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

# Security settings
DEBUG=False

# Host configuration (comma-separated list)
# Examples:
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com,192.168.1.100
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CSRF trusted origins (comma-separated list, include protocol)
# Examples:
# CSRF_TRUSTED_ORIGINS=http://localhost,https://your-domain.com
# CSRF_TRUSTED_ORIGINS=http://192.168.1.100,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# HTTPS settings (uncomment when using HTTPS)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Demo mode (set to true for automatic test data generation)
# DEMO_MODE=false 